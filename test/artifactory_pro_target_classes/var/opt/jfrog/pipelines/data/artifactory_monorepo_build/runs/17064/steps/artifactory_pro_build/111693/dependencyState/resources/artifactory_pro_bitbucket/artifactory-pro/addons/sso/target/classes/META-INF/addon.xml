<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean class="org.artifactory.addon.sso.SsoAddonImpl"/>

    <!-- Add the SSO authentication filter -->
    <bean class="org.artifactory.addon.sso.auth.http.AnonymousSamlLoginInterceptor"/>
    <bean class="org.artifactory.addon.sso.auth.http.AnonymousSamlGatewayInterceptor"/>

    <bean class="org.artifactory.addon.sso.openid.SingleSignOnServiceImpl"/>
    <bean class="org.artifactory.addon.sso.oauth.OAuthHandlerImpl"/>

    <bean class="org.artifactory.addon.sso.auth.http.ArtifactoryHttpSsoAuthenticationFilter"/>
    <bean id="mavenForceAuthenticationFilter"
          class="org.artifactory.addon.sso.auth.http.ForceAuthenticationFilter" primary="true"/>

    <bean class="org.artifactory.addon.sso.auth.crowd.CrowdSsoAuthenticationFilter"/>

    <bean class="org.artifactory.addon.sso.auth.crowd.CrowdLogoutHandler"/>
</beans>
